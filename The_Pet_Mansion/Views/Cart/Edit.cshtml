
@model The_Pet_Mansion.Models.Cart

<h3 style="font-family:Alef;">Adresa de livrare</h3>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Cart"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.ValidationSummary(false, null, new { @class = "text-danger" })
    <br />
    @Html.HiddenFor(m => m.CartID)

    @Html.Label("Address", "Adresa")
    <br />
    @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })

    <br />
    @Html.Label("PhoneNumber", "Numar de telefon")
    <br />
    @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.PhoneNumber, null, new { @class = "text-danger" })

    <br /><br />

    <button class="btn btn-sm btn-success" type="submit"><i class="glyphicon glyphicon-check"></i>Finalizeaza comanda</button>
}
