

<div class="panel-heading"><strong>@Model.ProductName</strong></div>
<div class="panel-body">

    <div style="display: block; width: 50%; height: 250px;">
        <img src="/Files/@Model.File.FileName" style="width: 100%; height: 250px; object-fit: cover" />
    </div>
    <br />
    <strong>Descriere produs: </strong>@Model.Description
    <br />
    <div class="pull-right">
        <p>Rating: @Math.Round(@Model.AvgRating, 2) /5</p>
        @for (int i = 1; i <= Model.AvgRating; i++)
        {
            <span class="glyphicon glyphicon-star"></span>
        }
        @for (int i = (int)Model.AvgRating + 1; i <= 5; i++)
        {
            <span class="glyphicon glyphicon-star-empty"></span>
        }
    </div>
    <strong>@Model.Price Lei</strong>
    <br />
    <i class="glyphicon glyphicon-list"></i> @Model.Category.CategoryName
    <i class="glyphicon glyphicon-heart-empty"></i> @Model.Animal.Species
    <br />
    <span class="label label-info">@Model.Stock Produse disponibile</span>
    <span class="label label-success">@Model.Date</span>
    <i class="glyphicon glyphicon-user"></i> <i>adaugat de</i> <strong> @Model.User.UserName </strong>
    <br />
    @if (User.IsInRole("Admin"))
    {
        if (Model.Visible)
        {
            <i class="glyphicon glyphicon-eye-open"></i><i>Vizibil</i>
        }
        else
        {
            <i class="glyphicon glyphicon-eye-close"></i><i>Invizibil</i>
        }


    }
</div>
    <br />
